<script>
    document.getElementById('check-pwd').addEventListener("change", () => {
        if (document.getElementById('check-pwd').checked) {
            document.getElementById('password').type = 'text'
        } else {
            document.getElementById('password').type = 'password'
        }
    })
</script>


<div class="sign-up-box">
    <div class="title"><h3>Sign Up</h3></div>
    <div class="form-box">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="email-box">
                <input asp-for="Input.Email" placeholder="Your email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="pwd-box">
                <input asp-for="Input.Password" type="password" placeholder="Your password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="confirm-pwd-box">
                <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="name-box">
                <input asp-for="Input.Name" type="text" placeholder="Your full name">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="address-box">
                <input asp-for="Input.Address" type="text" placeholder="Your address">
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <select name="choose-role" class="form-select">
                <option selected>Purpose of use</option>
                <option value="0">Buying books</option>
                <option value="1">Selling books</option>
            </select>
            <div class="form-check-term">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
                <label class="form-check-label" for="flexCheckDefault">
                    You are agreeing to our <a href=""><i>Terms of Use</i></a> <br>and our <a href=""><i>Privacy Policy</i></a>.
                </label>
            </div>
            <button type="submit" class="sign-up-btn" id="create-btn">Create Account</button>
            <hr>
            <div class="sign-in-link"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign In</a></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

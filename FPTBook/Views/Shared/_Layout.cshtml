    <div class="header">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <a href="#">FREE EBOOK EXCLUSIVELY FOR B&N PREMIUM MEMBERS</a>
                </div>
                <div class="carousel-item">
                    <a href="#">FREE EBOOK EXCLUSIVELY FOR B&N PREMIUM MEMBERS</a>
                </div>
                <div class="carousel-item">
                    <a href="#">FREE EBOOK EXCLUSIVELY FOR B&N PREMIUM MEMBERS</a>
                </div>
            </div>
        </div>

        <div class="mainNav">
            <div class="utility-bar">
                <ul class="content-start">
                    <li class="nav-item"><a href="#">STORES & EVENTS</a></li>
                    <li class="nav-item"><a href="#">BLOG & PODCAST</a></li>
                    <li class="nav-item"><a href="#">MEMBERSHIP</a></li>
                    <li class="nav-item"><a href="#">COUPONS & DEALS</a></li>
                    <li class="nav-item"><a href="#">BESTSELLERS</a></li>
                    <li class="nav-item"><a href="#">GIFT CARDS</a></li>
                </ul>

                <ul class="content-end">
                    <partial name="_LoginPartial" />
                    <li class="wishlist">
                        <a href="#">
                            <span class="wish-icon"><i class="fa-regular fa-heart"></i></span>
                            Wishlist
                        </a>
                    </li>
                </ul>
            </div>

            <div class="logo-bar">
                <div class="logo"><a asp-action="Index" asp-controller="Home"></a></div>
                <form method="get" asp-action="DisplayProductBySearch">
                    <input class="text-box" type="text" name="search-term" placeholder="Type here to search your book">
                    <button class="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                <ul class="cart-box">
                    <li class="cart-icon"><a asp-action="Cart"> <i class="fa-solid fa-cart-shopping"></i> </a></li>
                    @await Component.InvokeAsync("CartQty")
                </ul>
            </div>

            <div class="navbar">
                <ul>
                    <li class="nav-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="nav-item">
                        <a href="#">Genre</a>
                        <div class="drop-menu">
                            @await Component.InvokeAsync("GenreNav")
                        </div>
                    </li>
                    <li class="nav-item"><a href="#">New Books</a></li>
                    <li class="nav-item"><a href="#">Best Sellers</a></li>
                    <li class="nav-item"><a href="#">Blog</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="footer-07">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 text-center mt-5">
                    <h2 class="footer-heading"><a href="#" class="logo">FptBook.com</a></h2>
                    <p class="menu pt-3">
                        <a href="#">Home</a>
                        <a href="#">Agent</a>
                        <a href="#">About</a>
                        <a asp-action="HelpCenter">HELP</a>
                        <a href="#">Blog</a>
                        <a href="#">Contact</a>
                    </p>
                    <ul class="ftco-footer-social p-0">
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><span class="ion-logo-twitter"><i class="fa-brands fa-twitter"></i></span></a></li>
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><span class="ion-logo-facebook"><i class="fa-brands fa-facebook"></i></span></a></li>
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><span class="ion-logo-instagram"><i class="fa-brands fa-instagram"></i></span></a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-5 copy-right">
                <div class="col-md-12 text-center">
                    <p class="copyright">
